            <h3 class="name">Jim Weirich</h3><br/>
            <small class="title">Chef Scientist at Neo and Creator of Rake</small>
            <p><span class="invited">Invited Speaker</span></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="speaker nell">
          <%= image_tag 'conference/speaker-nell@2x.png', class: 'photo' %>
          <div class="desc">
            <h3 class="name">Nell Shamrell</h3><br/>
            <small class="title">Software Developer and Engineering Project Manager at Blue Box</small>
            <p><span class="invited">Invited Speaker</span></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="speaker rafael">
          <%= image_tag 'conference/speaker-rafael@2x.png', class: 'photo' %>
          <div class="desc">
            <h3 class="name">Rafael França</h3><br/>
            <small class="title">Software Developer at Plataformatec and Member of Rails Core Team</small>
            <p><span class="invited">Invited Speaker</span></p>
          </div>
        </div>
      </div>
    </div>
